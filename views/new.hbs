<div class="d-flex justify-content-center">
  <div class=" d-flex align-items-stretch flex-column mb-3" style="height: 200px; width: 50%">
    <h5>Enter your expense</h5>
    <small class="mb-3">* Required field</small>

    <form action="/records" method="POST" class="d-flex align-items-center flex-column mb-3 form-control ">
      <div class="form-group col-8 mb-3">
        <label for="name" class="col-sm-2 col-form-label">Name*:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" placeholder="Expense Name" value="{{name}}"
            required>
        </div>
      </div>

      <div class="form-group col-8 mb-3">
        <label for="Date" class="col-sm-2 col-form-label">Date *:</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" id="date" name="date" placeholder="ex: 2020/01/01" max="9999-12-31"
            value="{{date}}" required>
        </div>
      </div>

      <div class="form-group col-8 mb-3">
        <label for="category" class="col-sm-2 col-form-label">Category*:</label>
        <select class="form-select form-select-sm" id="category" name="category" aria-label="category"
          aria-label="category" required>
          <option disabled>Filter Category...</option>
          <option value="Property">Property</option>
          <option value="Transportation">Transportation</option>
          <option value="Entertainment">Entertainment</option>
          <option value="Dining">Dining</option>
          <option value="Other">Other</option>
        </select>
      </div>

      <div class="form-group col-8 mb-3">
        <label for="amount" class="col-sm-2 col-form-label">Amount*:</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="amount" name="amount" placeholder="Expense Amount"
            value="{{amount}}" required>
        </div>
      </div>
      <div class="form-group col-8 mb-3">
        <button type="submit" class="btn btn-outline-dark">Submit</button>
        <a href="/">Return</a>
      </div>

    </form>


  </div>
</div>