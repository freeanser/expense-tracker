<div class="d-flex justify-content-center">
  <div class=" d-flex align-items-stretch flex-column mb-3" style="height: 200px; width: 50%">
    <h1>Login</h1>
    <small class="mb-3">Please log in first to use your Expense Tracker.</small>
    {{> message}}

    <form action="/users/login" method="POST" class="d-flex align-items-center flex-column mb-3 form-control ">
      <div class="form-group col-8 mb-3">
        <label for="email" class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required>
        </div>
      </div>

      <div class="form-group col-8 mb-3">
        <label for="password" class="col-sm-2 col-form-label">Password:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="password" name="password" placeholder="Enter Password" required>
        </div>
      </div>
      <div class="form-group col-8 mb-3">
        <button type="submit" class="btn btn-outline-dark">Login</button>
        <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p>
      </div>

    </form>


  </div>
</div>