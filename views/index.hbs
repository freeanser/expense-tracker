<div class="d-flex justify-content-center">
  <div class=" d-flex align-self-center align-items-stretch flex-column mb-3" style="height: 200px; width: 50%">
    <div class="mb-auto p-2">
      <form action="">
        <select class="form-select form-select-sm" aria-label=".form-select-sm example">
          <option selected>Filter Category...</option>
          <option value="家居物業">Home & Property</option>
          <option value="交通出行">Transportation</option>
          <option value="休閒娛樂">Leisure & Entertainment</option>
          <option value="餐飲食品">Dining & Food</option>
          <option value="其他">Other</option>
        </select>
      </form>
    </div>

    <div class="d-flex p-2 m-2">
      <p>Total Amount</p>
      <span class="text-center fs-1" style="height: 50px; width: 70%" style="color:red">Amount
      </span>
    </div>
    <div class=" p-2 ">
      <table class="table table-striped table-hover">

        <tbody>
          {{#each records}}
          <tr>
            <th scope="row">icon</th>
            <td>
              {{!-- <i class="{{this.icon}}"></i> --}}
            </td>
            <td>
              {{this.name}}
            </td>
            <td>
              {{dateFormat this.date "yyyy-MM-DD"}}
            </td>
            <td>
              {{this.amount}}
            </td>
            <td>
              <a href="" class="btn btn-light">Edit</a>
            </td>
            <td>
              <form action="./records/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                <button class="btn btn-danger" type="submit">delete</button>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <a href="/records/new" class="btn btn-warning mt-3 mb-5">Add Record</a>
  </div>
</div>